<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="370.0" prefWidth="320.0" xmlns:fx="http://javafx.com/fxml"
            fx:controller="kent.co871.simplebankmvc.Controller">
    <children>
        <Label layoutX="22.0" layoutY="19.0" text="Name"/>
        <Label layoutX="22.0" layoutY="54.0" text="Balance"/>
        <TextField fx:id="txbName" layoutX="72.0" layoutY="14.0"/>
        <TextField fx:id="txbBalance" layoutX="72.0" layoutY="49.0"/>
        <Button fx:id="btnAdd" layoutX="240.0" layoutY="35.0" onAction="#btnAddHandler" prefHeight="30.0"
                prefWidth="60.0" text="Add" textFill="#1c0ba2">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
        <ListView fx:id="listView" layoutX="26.0" layoutY="93.0" onMouseClicked="#selectHandler" prefHeight="200.0"
                  prefWidth="201.0"/>
        <Button fx:id="btnDelete" disable="true" layoutX="240.0" layoutY="180.0" onAction="#btnDeleteHandler"
                prefHeight="30.0" prefWidth="60.0" text="Delete" textFill="#1c0ba2">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
        <Label fx:id="lblAsset" layoutX="146.0" layoutY="312.0" prefHeight="25.0" prefWidth="79.0" text="0"
               textFill="#d11305">
            <font>
                <Font size="13.0"/>
            </font>
        </Label>
        <Label layoutX="38.0" layoutY="312.0" prefHeight="25.0" text="Bank cash assets:" textFill="#d11305">
            <font>
                <Font size="13.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>